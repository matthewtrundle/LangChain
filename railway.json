{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "backend": {
      "root": "backend",
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "python main.py",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    },
    "frontend": {
      "root": "frontend", 
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build"
      },
      "deploy": {
        "startCommand": "npm start"
      }
    }
  }
}