# Network Configuration
NETWORK=TESTNET
RPC_URL=https://api.testnet.solana.com
HELIUS_API_KEY=your_helius_api_key_here

# Wallet Configuration (choose one)
# Option 1: Base64 encoded private key
WALLET_KEY_B64=your_base64_encoded_private_key_here
# Option 2: Path to key file (gitignored)
WALLET_KEY_PATH=./secrets/testnet.json

# Operation Mode
DRY_RUN=true
LOG_LEVEL=info

# OpenRouter API for LangChain agents
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional: Performance tuning
POSITION_POLL_INTERVAL=30
MAX_CONCURRENT_RPC_CALLS=5
CACHE_TTL_SECONDS=300